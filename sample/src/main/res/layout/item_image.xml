<?xml version="1.0" encoding="utf-8"?>
<com.kotlinify.cropiwa.sample.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

<ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        android:transitionName="@string/transition_view_image" />

</com.kotlinify.cropiwa.sample.view.SquareLayout>